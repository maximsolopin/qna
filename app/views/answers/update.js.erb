<% if @answer.errors.present? %>
    $('<%= j render 'answers/errors' %>').insertBefore($('form#edit-answer-<%= @answer.id %>'));
<% else %>
    $('.answers div.errors').remove();
    $('.answers form#edit-answer-<%= @answer.id %>').remove();
    $('.answers div#answer-id-<%= @answer.id %>').replaceWith('<%= j render @answer %>');
<% end %>